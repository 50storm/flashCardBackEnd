# .htaccess
<IfModule mod_rewrite.c>
  RewriteEngine On

  # 1) Preflight(OPTIONS) もフロントコントローラへ
  RewriteCond %{REQUEST_METHOD} =OPTIONS
  RewriteRule ^ index.php [QSA,L]

  # 2) それ以外の通常リクエスト
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule ^ index.php [QSA,L]
</IfModule>
